<Window x:Class="RepairAirplanesWPF.Views.EditDataViews.SimpleEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RepairAirplanesWPF.Views.EditDataViews" xmlns:uicomponents="clr-namespace:RepairAirplanesWPF.UIComponents"
        mc:Ignorable="d"
        Title="Редактирование данных" MinHeight="150" MinWidth="200" Width="400" Height="150" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical" Margin="10">
        <TextBlock Text="Название"/>
        <TextBox Text="{Binding name}" MinHeight="30"/>
        <Button Margin="0,10,0,0" Click="Save_Click" Content="Сохранить"/>
    </StackPanel>
</Window>
