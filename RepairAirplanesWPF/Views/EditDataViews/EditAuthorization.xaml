<Window x:Class="RepairAirplanesWPF.Views.EditDataViews.EditAuthorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RepairAirplanesWPF.Views.EditDataViews"
        mc:Ignorable="d"
        Title="EditAuthorization" Height="300" MinHeight="300" Width="800">
    <StackPanel Orientation="Vertical" Margin="10">
        <TextBlock Text="Пользователь"/>
        <TextBlock Text="{Binding Person.FIO}" FontWeight="Bold"/>
        <TextBlock Margin="0,10,0,0" Text="Логин"/>
        <TextBox Text="{Binding login}"/>
        <TextBlock Margin="0,10,0,0" Text="Пароль"/>
        <TextBox Text="{Binding password}"/>
        <Button Margin="0,10,0,0" Content="Сохранить"/>
    </StackPanel>
</Window>
