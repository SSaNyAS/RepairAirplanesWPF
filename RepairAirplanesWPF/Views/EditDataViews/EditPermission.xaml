<Window x:Class="RepairAirplanesWPF.Views.EditDataViews.EditPermission"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RepairAirplanesWPF.Views.EditDataViews"
        mc:Ignorable="d"
        Title="Редактирование прав" Height="220" Width="400" MinHeight="220">
    <StackPanel Orientation="Vertical" Margin="10">
        <TextBlock Text="Название"/>
        <TextBox Text="{Binding name}"/>
        <TextBlock Margin="0,10,0,0" Text="Описание"/>
        <TextBox Text="{Binding description}"/>
        <Button Margin="0,10,0,0" Content="Сохранить"/>
    </StackPanel>
</Window>
